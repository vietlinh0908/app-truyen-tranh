<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/backgroudtrang"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textviewTitle"
            android:padding="5dp"
            android:textSize="24dp"
            android:text="Tên bài hát:"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/imgv_dianhac"
            android:src="@drawable/anhdianhac"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textviewtimesong"
                android:layout_marginTop="150dp"
                android:padding="5dp"
                android:textSize="20sp"
                android:text="00:00"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textviewtotal"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="200dp"
                android:padding="5dp"
                android:textSize="20sp"
                android:text="01:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <SeekBar
            android:id="@+id/seekBarsong"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imagebtnPre"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginTop="600dp"
            android:src="@drawable/nut_tua_lai" />


        <ImageButton
            android:id="@+id/imagebtnPlay"
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_marginTop="600dp"
            android:src="@drawable/nut_tam_dung" />

        <ImageButton
            android:gravity="center"
            android:id="@+id/imagebtnStop"
            android:layout_marginLeft="10dp"
            android:layout_width="55dp"
            android:layout_height="80dp"
            android:layout_marginTop="600dp"
            android:src="@drawable/nut_tiep_tuc" />

        <ImageButton
            android:gravity="center"
            android:layout_marginLeft="8dp"
            android:id="@+id/imagebtnNext"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginTop="600dp"
            android:src="@drawable/nut_next_bai" />


    </LinearLayout>


</RelativeLayout>